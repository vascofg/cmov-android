<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_from_stations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_from_stations"/>

    <Spinner
        android:id="@+id/from_stations_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_from_stations"/>

    <TextView
        android:id="@+id/label_to_stations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/from_stations_spinner"
        android:layout_marginTop="@dimen/layout_vertical_spacing"
        android:text="@string/label_to_stations"/>

    <Spinner
        android:id="@+id/to_stations_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_to_stations"/>

    <Spinner
        android:id="@+id/buy_tickets_arrival_departure_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_stations_spinner"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/buy_tickets_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_tickets_arrival_departure_spinner"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textColor="@color/common_signin_btn_light_text_default"
        android:textSize="30dp"
        tools:text="TIME"/>

    <Button
        android:id="@+id/buy_tickets_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buy_tickets_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_vertical_spacing"
        android:text="Buy"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/timetable_row_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:text="DEPARTURE"/>

    <TextView
        android:id="@+id/timetable_row_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        tools:text="ARRIVAL"/>

    <TextView
        android:id="@+id/timetable_row_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/timetable_row_departure"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:text="DEPARTURE TIME"/>

    <TextView
        android:id="@+id/timetable_row_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/timetable_row_arrival"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        tools:text="ARRIVAL TIME"/>
</RelativeLayout>
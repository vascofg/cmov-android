<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_from_stations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_from_stations"/>
    <Spinner android:id="@+id/from_stations_spinner"
        android:layout_below="@+id/label_from_stations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/label_to_stations"
        android:layout_below="@id/from_stations_spinner"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/layout_vertical_spacing"
        android:layout_height="wrap_content"
        android:text="@string/label_to_stations"/>
    <Spinner android:id="@+id/to_stations_spinner"
        android:layout_below="@+id/label_to_stations"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buy_tickets_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_stations_spinner"
        android:layout_marginTop="@dimen/layout_vertical_spacing"
        android:layout_centerHorizontal="true"
        android:text="@string/buy_tickets"
        android:onClick="buy_tickets"/>

</RelativeLayout>
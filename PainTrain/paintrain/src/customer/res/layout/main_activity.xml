<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center">

    <Button
        android:id="@+id/auth_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth"
        android:onClick="launchAuth"/>

    <Button
        android:id="@+id/buy_tickets_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_tickets"
        android:onClick="launchBuyTickets"/>

    <Button
        android:id="@+id/timetable_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timetable"
        android:onClick="launchTimetable"/>

    <Button
        android:id="@+id/nfc_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nfc"
        android:onClick="launchNFC"/>
</LinearLayout>
